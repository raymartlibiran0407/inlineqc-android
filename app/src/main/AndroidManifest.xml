<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="co.ltlabs.qualityconnectinline">

    <application
            android:name="android.serialport.Application"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_ltlabs"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Activity.AuthorizationActivity">
        </activity>
        <activity
                android:name=".Activity.DefectActivity"
                android:label="@string/title_activity_defect"
                android:launchMode="singleTop">
