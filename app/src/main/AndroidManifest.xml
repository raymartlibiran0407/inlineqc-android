        </activity>
        <activity
                android:name=".Activity.MainActivity"
                android:launchMode="singleTop">
        </activity>
        <meta-data
                android:name="io.fabric.ApiKey"
                android:value="13cb128cf8654db901aba19a59125ea3e67c015a"
                />
