<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
                android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
            <solid android:color="@android:color/darker_gray" />

        </shape>
    </item>

    <item
            android:top="1dp"
            android:bottom="1dp"
            android:right="1dp">
        <shape
                android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="@color/global_background_color" />
            <solid android:color="@color/global_background_color" />
        </shape>
    </item>

</layer-list>