<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.AuthorizationActivity"
        android:background="@color/holo_red_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="986dp"
            android:layout_height="500dp"
            android:id="@+id/constraintLayout_Authorization"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_corner_background_invisible"
            app:layout_constraintVertical_bias="0.502">

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:id="@+id/textInput_Username"
                app:helperTextEnabled="false"
                app:passwordToggleEnabled="false"
                android:focusableInTouchMode="true"
                app:errorEnabled="false"
                android:hint="Authorize User"
                android:background="@drawable/rounded_corner_background_invisible"
                android:textColorHint="@color/global_text_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="60dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableLeft="@drawable/ic_person_black"
                    android:drawablePadding="10dp"
                    android:textColorHint="@color/global_text_color"
                    android:textColorLink="@color/global_text_color"
                    android:textColor="@color/global_text_color"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="450dp"
                android:layout_height="60dp"
                android:id="@+id/textInput_Password"
                android:focusableInTouchMode="true"
                app:errorEnabled="false"
                android:hint="Code"
                android:background="@drawable/rounded_corner_background_invisible"
                android:textColorHint="@color/global_text_color"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/global_text_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toEndOf="@+id/textInput_Username"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="60dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_lock_black"
                    android:drawablePadding="10dp"
                    android:textColor="@color/global_text_color"
                    android:textColorLink="@color/global_text_color"/>
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
                android:layout_width="930dp"
                android:layout_height="166dp"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/editText_Remarks"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textInput_Username"
                android:background="@drawable/rounded_corner_background_invisible"
                android:textColor="@color/global_text_color"
                android:textColorHint="@color/global_text_color"
                android:hint="Reason..."
                android:padding="10dp"/>

        <Button
                android:text="SUBMIT"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:id="@+id/button_Submit"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/editText_Remarks"
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_marginEnd="160dp"
                android:textSize="16sp"/>

        <Button
                android:text="BACK"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:id="@+id/button_Back"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="160dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/editText_Remarks"
                android:textSize="16sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>